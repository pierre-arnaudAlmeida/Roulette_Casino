With Ada.Text_IO; use Ada.Text_IO;
WITH Ada.Integer_Text_IO; USE Ada.Integer_Text_IO;
WITH Ada.Numerics.Discrete_Random;

PROCEDURE Roulette_Casino IS

   TYPE Parie IS Record
      Mise : Integer;
      end record;


   SUBTYPE Numero IS Integer RANGE 1..36;
   PACKAGE Roulette IS NEW Ada.Numerics.Discrete_Random(Numero);
   USE Roulette;
   G : Generator;

   FUNCTION LancerBoule (G : Generator) RETURN Numero IS
   BEGIN
      RETURN Random(G);
   END LancerBoule;

   PROCEDURE MiseJoueur (P : Parie) IS
   BEGIN
      Put("entrer la mise");
      Get(P.Mise);
   END MiseJoueur;

BEGIN

   Reset(G);

   Put(LancerBoule(G));
   New_line;


END Roulette_Casino;

